<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".SetQuestionActivity">
        <RelativeLayout
            android:id="@+id/relative_layout_set"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:background="@color/colorPrimaryDark"
            android:layout_alignParentTop="true">
            <TextView
                android:id="@+id/text_title_set"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Set Security Questions"
                android:textStyle="bold"
                android:textAlignment="center"
                android:textColor="@android:color/white"
                android:textSize="20dp" />


        </RelativeLayout>
        <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true"
            android:layout_below="@id/relative_layout_set"
            >

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:stretchColumns="1">
                <TextView
                    android:id="@+id/text_question1_set"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Enter Your First Security Question"
                    android:gravity="center"
                    android:textSize="24dp"
                    android:layout_marginTop="15dp"
                    android:textColor="@android:color/black" />

                <TextView
                    android:id="@+id/text_question_1_set"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="15dp"
                    android:textColor="@color/colorPrimary"
                    android:text="Question 1"
                    android:textSize="20dp" />

                <EditText
                    android:id="@+id/edit_text_question_1_set"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/input_design"
                    android:padding="14dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="15dp"
                    android:hint="E.G. Name of your first pet"
                    />
                <TextView
                    android:id="@+id/text_answer_1_set"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="15dp"
                    android:textColor="@color/colorPrimary"
                    android:text="Answer 1"
                    android:textSize="20dp" />
                <EditText
                    android:id="@+id/edit_text_answer_1_set"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/input_design"
                    android:padding="14dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="15dp"
                    android:hint="E.G. Spot"
                    />
                <TextView
                    android:id="@+id/text_question2_set"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Enter Your First Security Question"
                    android:gravity="center"
                    android:textSize="24dp"
                    android:layout_marginTop="15dp"
                    android:textColor="@android:color/black" />

                <TextView
                    android:id="@+id/text_question_2_set"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="15dp"
                    android:textColor="@color/colorPrimary"
                    android:text="Question 2"
                    android:textSize="20dp" />

                <EditText
                    android:id="@+id/edit_text_question_2_set"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/input_design"
                    android:padding="14dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="15dp"
                    android:hint="E.G. What are the last 4 digits of your childhood phone number"
                    />
                <TextView
                    android:id="@+id/text_answer_2_set"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="15dp"
                    android:textColor="@color/colorPrimary"
                    android:text="Answer 2"
                    android:textSize="20dp" />
                <EditText
                    android:id="@+id/edit_text_answer_2_set"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/input_design"
                    android:padding="14dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="15dp"
                    android:hint="E.G. 3768"
                    />
                <Button
                    android:id="@+id/button_verify_set"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/buttons"
                    android:padding="14dp"
                    android:layout_margin="15dp"
                    android:layout_below="@+id/edit_text_question_1_set"
                    android:text="Set Questions"
                    android:textColor="@android:color/white"
                    android:textStyle="bold"
                    android:textSize="20dp"
                    />
            </TableLayout>
        </ScrollView>



    </RelativeLayout>
</layout>