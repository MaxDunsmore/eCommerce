<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ResetPasswordActivity">
    <RelativeLayout
        android:id="@+id/relative_layout_reset"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:background="@color/colorPrimaryDark"
        android:layout_alignParentTop="true">
        <TextView
            android:id="@+id/text_title_reset"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Reset Password"
            android:textStyle="bold"
            android:textAlignment="center"
            android:textColor="@android:color/white"
            android:textSize="26sp" />


    </RelativeLayout>
    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:layout_below="@id/relative_layout_reset"
        >

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:stretchColumns="1">
            <TextView
                android:id="@+id/text_phone_number_reset"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Please enter your phone number"
                android:gravity="center"
                android:textSize="24dp"
                android:layout_marginTop="15dp"
                android:textColor="@android:color/black" />

            <EditText
                android:id="@+id/edit_text_phone_reset"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/input_design"
                android:padding="14dp"
                android:layout_marginTop="5dp"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:inputType="number"
                android:hint="E.G. 0489 485 847"
                android:imeOptions="actionGo"
                android:imeActionId="666"
                android:imeActionLabel="Some Label"
                android:maxLines="1"
                />

            <TextView
                android:id="@+id/text_question_one_reset"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Question 1 "
                android:gravity="center"
                android:textSize="24dp"
                android:layout_marginTop="15dp"
                android:textColor="@android:color/black"
                android:visibility="invisible"
                />

            <TextView
                android:id="@+id/edit_text_question_1_reset"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="14dp"
                android:layout_marginTop="5dp"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:visibility="invisible"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/colorPrimaryDark"
                />

            <EditText
                android:id="@+id/edit_text_answer_1_reset"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/input_design"
                android:padding="14dp"
                android:layout_marginTop="5dp"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:visibility="invisible"
                />
            <TextView
                android:id="@+id/text_question2_two_reset"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Question 2"
                android:gravity="center"
                android:textSize="24dp"
                android:layout_marginTop="15dp"
                android:textColor="@android:color/black"
                android:visibility="invisible"/>

            <TextView
                android:id="@+id/edit_text_question_2_reset"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="14dp"
                android:layout_marginTop="5dp"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:visibility="invisible"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/colorPrimaryDark"
                />

            <EditText
                android:id="@+id/edit_text_answer_2_reset"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/input_design"
                android:padding="14dp"
                android:layout_marginTop="5dp"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:visibility="invisible"
                />
            <Button
                android:id="@+id/button_verify_reset"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/buttons"
                android:padding="14dp"
                android:layout_margin="15dp"
                android:text="Verify"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:textSize="20dp"
                android:visibility="invisible"
                />
        </TableLayout>
    </ScrollView>



</RelativeLayout>
</layout>