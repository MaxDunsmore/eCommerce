<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="clickHandler"
            type="com.example.ecommerce.DisplaySubCategoriesActivity.ClickHandler" />
    </data>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".DisplaySubCategoriesActivity">
        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/app_bar_sub_categories"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/colorPrimary">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar_sub_categories_display"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/close_sub_categories_display_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_marginTop="10dp"
                        android:text="Back"
                        android:textColor="@android:color/white"
                        android:textSize="17sp"
                        android:textStyle="bold" />

                </RelativeLayout>
            </androidx.appcompat.widget.Toolbar>

        </com.google.android.material.appbar.AppBarLayout>
        <TextView
            android:id="@+id/textView_title_sub_categories_display"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:fontFamily="@font/abril_fatface"
            android:text="@{clickHandler.category}"
            android:textAlignment="center"
            android:textColor="@color/colorDark"
            android:textSize="32sp"
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/app_bar_sub_categories"
            />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_category_sub_categories_display"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/textView_title_sub_categories_display"
            >
        </androidx.recyclerview.widget.RecyclerView>
    </RelativeLayout>
</layout>